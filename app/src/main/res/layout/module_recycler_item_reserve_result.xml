<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="7.5dp"
    android:layout_marginBottom="7.5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="光学实验室"
            android:textSize="23dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/line_color_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实验名称"
                style="@style/tv_table_labIntroduction"/>
            <TextView
                android:id="@+id/tv_item_experimentName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="光学实验"
                style="@style/tv_table_labIntroduction"
                android:layout_marginLeft="15dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/line_color_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预约时间"
                style="@style/tv_table_labIntroduction"/>
            <TextView
                android:id="@+id/tv_item_startTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="13:00"
                style="@style/tv_table_labIntroduction"
                android:layout_marginLeft="15dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/line_color_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="审核结果"
                style="@style/tv_table_labIntroduction"/>
            <TextView
                android:id="@+id/tv_item_reserveResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="未通过"
                style="@style/tv_table_labIntroduction"
                android:layout_marginLeft="15dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/line_color_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="审核老师"
                style="@style/tv_table_labIntroduction"/>
            <TextView
                android:id="@+id/tv_item_reserveTeacher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="王老师"
                style="@style/tv_table_labIntroduction"
                android:layout_marginLeft="15dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>